<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	
	<!-- 1.通过listener标签加载spring配置文件，创建spring工厂 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- 2.通过servlet标签加载springmvc配置文件；分发请求 -->
	<servlet>
		<servlet-name>springmvccc</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<!-- 启动加载 -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springmvccc</servlet-name>
		<url-pattern>*.do</url-pattern>

		<!-- url-pattern的写法复习： /loginServlet 精确匹配 /* 模糊匹配 /ws/* 路径匹配 *.abc 后缀匹配 -->
	</servlet-mapping>
	
	<filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>com.baizhi.filter.CharacterEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>